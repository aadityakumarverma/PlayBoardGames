<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.tic_tac.TicTacGameFragment">

    <LinearLayout
        android:id="@+id/llAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/icon_cross" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Player 1"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvPlayer1Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/wow_dino"
                android:text="00"
                android:textSize="@dimen/_35sdp" />

        </LinearLayout>
        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:background="@drawable/gradient_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvPlayer2Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/wow_dino"
                android:text="00"
                android:textSize="@dimen/_35sdp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/icon_circle" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Player 2"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_0sdp"
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_height="@dimen/_0sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            app:cardElevation="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivLineCenter"
                    android:layout_width="@dimen/_0sdp"
                    android:layout_height="@dimen/_0sdp"
                    android:layout_gravity="end"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:src="@drawable/line_vertical"
                    android:rotation="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearance="@style/Circular" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_0sdp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivBox00"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:scaleType="centerCrop"
                        android:tag="none"
                        app:contentPadding="@dimen/_10sdp" />
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivBox01"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#10000000"
                        android:scaleType="centerCrop"
                        android:tag="none"
                        app:contentPadding="@dimen/_10sdp" />
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivBox02"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:scaleType="centerCrop"
                        android:tag="none"
                        app:contentPadding="@dimen/_10sdp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_0sdp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivBox10"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#10000000"
                        android:scaleType="centerCrop"
                        android:tag="none"
                        app:contentPadding="@dimen/_10sdp" />
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivBox11"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:scaleType="centerCrop"
                        android:tag="none"
                        app:contentPadding="@dimen/_10sdp" />
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivBox12"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#10000000"
                        android:scaleType="centerCrop"
                        android:tag="none"
                        app:contentPadding="@dimen/_10sdp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_0sdp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivBox20"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:scaleType="centerCrop"
                        android:tag="none"
                        app:contentPadding="@dimen/_10sdp" />
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivBox21"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#10000000"
                        android:scaleType="centerCrop"
                        android:tag="none"
                        app:contentPadding="@dimen/_10sdp" />
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivBox22"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:scaleType="centerCrop"
                        android:tag="none"
                        app:contentPadding="@dimen/_10sdp" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <com.pbgames.utils.WinningLineView
            android:id="@+id/lineView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="@dimen/_15sdp"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivUndo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:elevation="@dimen/_5sdp"
            android:src="@drawable/ic_undo"
            android:visibility="visible"
            app:contentPadding="@dimen/_7sdp"
            app:shapeAppearance="@style/Circular" />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivRedo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:elevation="@dimen/_5sdp"
            android:src="@drawable/ic_redo"
            android:visibility="visible"
            app:contentPadding="@dimen/_7sdp"
            app:shapeAppearance="@style/Circular" />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:elevation="@dimen/_5sdp"
            android:src="@drawable/ic_restart"
            android:visibility="visible"
            app:contentPadding="@dimen/_7sdp"
            app:shapeAppearance="@style/Circular" />

    </LinearLayout>

</RelativeLayout>